<%- include('../partials/header') %>
<body>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="row w-100 m-0">
        <div class="col-lg-6 mx-auto">
          <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <div class="brand-logo text-center mb-4">
            </div>
            <h4 class="text-center"><%= __('remove_employee') %></h4>
            <% if (typeof message !== 'undefined') { %>
              <div class="alert alert-success text-center">
                <%= message %>
              </div>
            <% } %>
            <% if (typeof error !== 'undefined') { %>
              <div class="alert alert-danger text-center">
                <%= error %>
              </div>
            <% } %>
            <form class="pt-3" action="/admin/remove-employee" method="POST">
              <div class="form-group">
                <label for="userId">ID:</label>
                <input
                  type="text"
                  class="form-control form-control-lg"
                  id="userId"
                  name="userId"
                  required
                  placeholder="ID"
                />
              </div>
              <div class="form-group">
                <label for="reason"><%= __('reason_for_removal') %>:</label>
                <textarea
                  class="form-control form-control-lg"
                  id="reason"
                  name="reason"
                  required
                  placeholder="Please provide a reason for removal"
                  rows="3"
                ></textarea>
              </div>
              <div class="mt-3">
                <button
                  type="submit"
                  class="btn btn-block btn-danger btn-lg font-weight-medium auth-form-btn"
                >
                  <%= __('remove') %>
                </button>
              </div>
              <div class="mt-3 text-center">
                <a href="/" class="btn btn-outline-secondary btn-lg">
                  <i class="mdi mdi-arrow-left"></i> <%= __('back_to_the_main_page') %>
                </a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Corona template JS-ek -->
  <script src="/vendors/js/vendor.bundle.base.js"></script>
  <script src="/js/off-canvas.js"></script>
  <script src="/js/hoverable-collapse.js"></script>
  <script src="/js/misc.js"></script>
</body>
</html>
