<nav class="navbar p-0 fixed-top d-flex flex-row">
  <div class="navbar-brand-wrapper d-flex d-lg-none align-items-center justify-content-center">
    <a class="navbar-brand brand-logo-mini" href="/"><img src="/images/truck.jpg" alt="logo" /></a>
  </div>
  <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
    <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
      <span class="mdi mdi-menu"></span>
    </button>
    <ul class="navbar-nav navbar-nav-right">
      <li class="nav-item dropdown">
        <a class="nav-link" id="profileDropdown" href="#" data-toggle="dropdown">
          <div class="navbar-profile">
            <% if (user && user._id) { %>
              <img class="img-xs rounded-circle" src="/images/faces/<%= user._id %>.jpg" alt="nincskep" onerror="this.src='/images/faces/default.jpg'">
            <% } else { %>
              <%- console.log('No user logged in, using default image'); %>
              <img class="img-xs rounded-circle" src="/images/faces/default.jpg" alt="">
            <% } %>
            <p class="mb-0 d-none d-sm-block navbar-profile-name">
              <%= user ? user.username : __('guest') %>
            </p>
            <i class="mdi mdi-menu-down d-none d-sm-block"></i>
          </div>
        </a>
        <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="profileDropdown">
          <h6 class="p-3 mb-0"><%= __('profile') %></h6>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
              <div class="preview-icon bg-dark rounded-circle">
                <i class="mdi mdi-settings text-success"></i>
              </div>
            </div>
            <div class="preview-item-content">
              <p class="preview-subject mb-1"><%= __('settings') %></p>
            </div>
          </a>
          <div class="dropdown-divider"></div>
          <% if (user) { %>
          <a class="dropdown-item preview-item" href="#" onclick="event.preventDefault(); document.getElementById('logout-form').submit();">
            <div class="preview-thumbnail">
              <div class="preview-icon bg-dark rounded-circle">
                <i class="mdi mdi-logout text-danger"></i>
              </div>
            </div>
            <div class="preview-item-content">
                <p class="preview-subject mb-1"><%= __('logout') %></p>
            </div>
          </a>
          <% } %>
          <form id="logout-form" action="/auth/logout" method="POST" style="display: none;"></form>
        </div>
        <li class="nav-item dropdown">
          <a class="nav-link" id="languageDropdown" href="#" data-toggle="dropdown">
            <i class="mdi mdi-translate"></i>
            <span class="d-none d-md-inline-block ml-2"><%= __('language') %></span>
            <i class="mdi mdi-menu-down"></i>
          </a>
          <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="languageDropdown">
            <a class="dropdown-item" href="#" onclick="setLang('en')"><%= __('english') %></a>
            <a class="dropdown-item" href="#" onclick="setLang('hu')"><%= __('hungarian') %></a>
            <a class="dropdown-item" href="#" onclick="setLang('ro')"><%= __('romanian') %></a>
            <a class="dropdown-item" href="#" onclick="setLang('de')"><%= __('german') %></a>
            <a class="dropdown-item" href="#" onclick="setLang('fr')"><%= __('french') %></a>
          </div>
          <script>
            function setLang(lang) {
              document.cookie = "lang=" + lang + ";path=/;max-age=31536000";
              location.reload();
            }
          </script>
        </li>
      </li>
    </ul>
    <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
      <span class="mdi mdi-format-line-spacing"></span>
    </button>
  </div>
</nav>
